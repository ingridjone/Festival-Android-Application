<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hiddenmsg"
    tools:context=".Dilemma7">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgHospital"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="6"
            android:alpha="1"
            android:contentDescription="Man in hospital bed"
            android:onClick="msgReveal"
            app:srcCompat="@drawable/hospital" />

        <TextView
            android:id="@+id/txt7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="3"
            android:text="You close your eyes and hope for the best. That’s all you remember because right now you are in the hospital, talking to your friends that have come to visit you. “So, I survived?” you ask. “Well… you are going to be in a wheelchair for your whole life because that mosh pit crushed you, but yes. I would say you survived I guess…”. "
            android:textColor="#EDCDFF" />

        <TextView
            android:id="@+id/txt8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="2"
            android:text="Congratulations! You survived the festival (barely…). Click the image on top to reveal the hidden message. Click the button to rate our game or you can also go back to the start to replay it! "
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnRate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:onClick="goRate"
            android:text="Rate festival survival"
            app:backgroundTint="#6D1160" />

        <Button
            android:id="@+id/btnBeginning"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="50dp"
            android:layout_weight="1"
            android:onClick="goDilemma1"
            android:text="Replay game"
            app:backgroundTint="#6D1160" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>